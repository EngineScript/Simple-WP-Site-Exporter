{
  "name": "enginescript/simple-wp-site-exporter",
  "description": "Simple WP Site Exporter - Export your entire WordPress site as a ZIP archive",
  "type": "wordpress-plugin",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "EngineScript",
      "email": "support@enginescript.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.2.7",
    "yoast/phpunit-polyfills": "^4.0",
    "wp-coding-standards/wpcs": "^3.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.1.1",
    "php-stubs/wordpress-stubs": "^6.8",
    "szepeviktor/phpstan-wordpress": "^2.0.2",
    "phpstan/phpstan": "^2.1.17"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
